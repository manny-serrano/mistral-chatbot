<?xml version="1.0" encoding="UTF-8"?>
<Attributes xmlns="urn:mace:shibboleth:2.0:attribute-map" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Duke University Attribute Mappings -->
    
    <!-- eduPersonPrincipalName - Duke NetID -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonPrincipalName" id="eppn">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- Alternative EPPN encoding -->
    <Attribute name="urn:oid:1.3.6.1.4.1.5923.1.1.1.6" id="eppn">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- eduPersonScopedAffiliation - User's role at Duke -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonScopedAffiliation" id="affiliation">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- Alternative affiliation encoding -->
    <Attribute name="urn:oid:1.3.6.1.4.1.5923.1.1.1.9" id="affiliation">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- Display Name -->
    <Attribute name="urn:mace:dir:attribute-def:displayName" id="displayName">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Alternative display name encoding -->
    <Attribute name="urn:oid:2.16.840.1.113730.3.1.241" id="displayName">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Given Name (First Name) -->
    <Attribute name="urn:mace:dir:attribute-def:givenName" id="givenName">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Alternative given name encoding -->
    <Attribute name="urn:oid:2.5.4.42" id="givenName">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Surname (Last Name) -->
    <Attribute name="urn:mace:dir:attribute-def:sn" id="surname">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Alternative surname encoding -->
    <Attribute name="urn:oid:2.5.4.4" id="surname">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Email Address -->
    <Attribute name="urn:mace:dir:attribute-def:mail" id="mail">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- Alternative email encoding -->
    <Attribute name="urn:oid:0.9.2342.19200300.100.1.3" id="mail">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>
    
    <!-- Duke ID Number -->
    <Attribute name="urn:mace:duke.edu:dir:attribute-def:dukeID" id="dukeID">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Common Name -->
    <Attribute name="urn:mace:dir:attribute-def:cn" id="cn">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- Alternative common name encoding -->
    <Attribute name="urn:oid:2.5.4.3" id="cn">
        <AttributeDecoder xsi:type="StringAttributeDecoder"/>
    </Attribute>
    
    <!-- eduPersonTargetedID -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonTargetedID" id="targeted-id">
        <AttributeDecoder xsi:type="NameIDAttributeDecoder" formatter="$NameQualifier!$SPNameQualifier!$Name" defaultQualifiers="true"/>
    </Attribute>
    
    <!-- Alternative targeted ID encoding -->
    <Attribute name="urn:oid:1.3.6.1.4.1.5923.1.1.1.10" id="targeted-id">
        <AttributeDecoder xsi:type="NameIDAttributeDecoder" formatter="$NameQualifier!$SPNameQualifier!$Name" defaultQualifiers="true"/>
    </Attribute>
    
    <!-- Persistent ID -->
    <Attribute name="urn:mace:dir:attribute-def:eduPersonPrincipalName" id="persistent-id">
        <AttributeDecoder xsi:type="StringAttributeDecoder" caseSensitive="false"/>
    </Attribute>

</Attributes> 